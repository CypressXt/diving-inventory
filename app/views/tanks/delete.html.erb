<div class="container" style="padding-top:1em">
  <div class="row">
    <div class="col-sm">
      <div class="card">
        <div class="card-body">
          <h1>You really want to delete permanently the tank number #<%= @tank.tank_number%>?</h1>
          <div class="row">
            <div class="col-6">
              <%= link_to "Cancel", tanks_path, :class => "btn btn-light btn-lg", :style=>"width:100%;"%>
            </div>
            <div class="col-6">
              <%= link_to "Delete this tank.", tank_path(@tank.id), :method => :delete, :class => "btn btn-danger btn-lg", :style=>"width:100%;" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
