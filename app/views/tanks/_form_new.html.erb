<%= form_for(@tank) do |f| %>
  <% if f.object.errors.any? %>
  <div class="form-group" style="padding-left:2em;padding-right:2em;">
    <div class="alert alert-danger" role="alert">
      <div id="clear"></div>
      <div id="error">
        <p class="title">
          <%= t 'activemodel.errors.messages', count: f.object.errors.count %>
        </p>
        <ul>
          <% f.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <div id="clear"></div>
    </div>
  </div>
  <% end %>
  <div class="form-group">
    <%= label_tag 'tank_number', "Tank number", class: 'control-label' %>
    <%= f.number_field :tank_number, steps:1.0, class: 'form-control', :required => true, :pattern => "[0-9]*" %>
  </div>
  <div class="form-group">
    <%= label_tag 'volume', "Tank volume [l]", class: 'control-label' %>
    <%= f.number_field :volume, steps:1.0, :value => '15', class: 'form-control', :required => true, :pattern => "[0-9]*" %>
  </div>
  <div class="form-group" style="margin-top:1em">
    <div class="row">
      <div class="col-md-6" style="padding-top:1em;">
        <%= link_to 'Cancel', tanks_path, :class => "btn btn-secondary btn-block btn-lg" %>
      </div>
      <div class="col-md-6" style="padding-top:1em;">
        <%= f.submit :class => "btn btn-primary btn-block btn-lg" %>
      </div>
    </div>
  </div>
<% end %>
