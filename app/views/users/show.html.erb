<div class="card shadow-sm" style="margin-top:1em;">
  <div class="card-img-top">
  </div>
  <div class="card-body">
    <% flash.each do |key, value| %>
      <div id="error_explanation" class="alert alert-<%=key%>" role="alert">
        <p>
          <%= value %>
        </p>
      </div>
    <% end %>
    <div class="container" style="margin-top:1em;">
      <h3><%= @user.name.capitalize+" "+@user.lastname.capitalize %></h3>
      <div class="row">
        <!-- Personal datas -->
        <div class="col-md-4">
          <div class="card-text">
            <div class="card">
              <div class="card-img-top">
              </div>
              <div class="card-body">
                <h5 class="card-title">Personal informations</h5>
                <div class="card-text">
                  <table class="table table-hover table-responsive">
                    <tbody>
                      <tr>
                        <td>Name</td>
                        <td><%= @user.name.capitalize+" "+@user.lastname.capitalize %></td>
                      </tr>
                      <tr>
                        <td>Mail</td>
                        <td><%= @user.mail %></td>
                      </tr>
                      <tr>
                        <td>Created</td>
                        <td><%= @user.created_at.to_formatted_s(:short) %></td>
                      </tr>
                      <tr>
                        <td>Updated</td>
                        <td><%= @user.updated_at.to_formatted_s(:short) %></td>
                      </tr>
                      <tr>
                        <td>Admin</td>
                        <td><%= @user.admin %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Dive history -->
        <div class="col-md-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Health certificates</h5>
              <div class="card-text">
                <div class="d-block d-sm-none">
                  Coming soon
                </div>
                <div class="d-none d-sm-block">
                  Coming soon
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row" style="margin-top:1em;">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Actions</h5>
              <div class="card-text">
                <% if is_admin %>
                  <% if @user.admin %>
                    <%= link_to 'Revoke admin', user_revoke_admin_path(@user.id), method: :patch, :class=>"btn btn-warning btn-sm" %>
                  <% else %>
                    <%= link_to 'Promote admin', user_promote_admin_path(@user.id), method: :patch, :class=>"btn btn-warning btn-sm" %>
                  <% end %>
                  <%= link_to 'Delete', user_delete_path(@user.id), :class=>"btn btn-danger btn-sm" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Dive history</h5>
              <div class="card-text">
                <div class="d-block d-sm-none">
                  <%= render 'pressurelogs/pressure_diving_log_small' %>
                </div>
                <div class="d-none d-sm-block">
                  <%= render 'pressurelogs/pressure_diving_log_large' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
