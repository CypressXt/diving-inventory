<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th scope="col">User #</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Mail</th>
      <th scope="col">Admin</th>
      <th scope="col" style="width:20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.name.capitalize %></td>
        <td><%= user.lastname.capitalize %></td>
        <td><%= user.mail %></td>
        <td><%= user.admin %></td>
        <td>
          <%= link_to 'Details', user_path(user.id), :class=>"btn btn-info btn-sm" %>
          <% if user.admin %>
            <%= link_to 'Revoke admin', user_path(user.id), :class=>"btn btn-warning btn-sm" %>
          <% else %>
            <%= link_to 'Promote admin', user_path(user.id), :class=>"btn btn-warning btn-sm" %>
          <% end %>
          <%= link_to 'Delete', user_path(user.id), :class=>"btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
