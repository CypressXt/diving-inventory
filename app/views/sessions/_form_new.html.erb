<%= form_for(:session, url: login_path) do |f| %>
  <% flash.each do |key, value| %>
    <div id="error_explanation" class="alert alert-<%=key%>" role="alert">
      <p>
        <%= value %>
      </p>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag 'mail', "Mail", class: 'control-label' %>
    <%= f.email_field :mail, class: 'form-control', :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag 'password', "Password", class: 'control-label'  %>
    <%= f.password_field :password, class: 'form-control', :required => true %>
  </div>
  <div class="form-group" style="margin-top:1em">
    <div class="row">
      <div class="col-md-6" style="padding-top:1em;">
        <%= link_to 'Register', new_user_path, :class => "btn btn-link btn-lg" %>
      </div>
      <div class="col-md-6" style="padding-top:1em;">
        <%= f.submit 'Log in', :class => "btn btn-primary btn-block btn-lg" %>
      </div>
    </div>
  </div>
<% end %>
